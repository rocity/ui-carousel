      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-85040392-2', 'auto');
      ga('send', 'pageview');

  body(ng-controller="CarouselDemoCtrl as DemoCtrl")
    header.header
      .container
        h1 UI-Carousel
        p A simple, lightweight carousel for AngularJS app.
        p
          | Inspired by &nbsp;
          a(href='http://kenwheeler.github.io/slick/', target='_blank') Slick carousel
    main.main(role='main')
      section.screen
        .container
          .content-box
            h2.title  Features
            ul.features
              //li Fully responsive. Scales with its container.
              //li Separate settings per breakpoint
              //-li Uses CSS3 when available. Fully functional when not.
              //-li Swipe enabled. Or disabled, if you prefer.
              //-li Desktop mouse dragging
              //-li Fully accessible with arrow key navigation
              //-li Add, remove, filter & unfilter slides
              li CSS3 (IE9+ will working good, lower IE version not tested)
              li Infinite looping.
              li Autoplay, dots, arrows, callbacks, etc...
          .divider
          .content-box
            h2.title Single Item
            ui-carousel(slides="DemoCtrl.single.slides", dots="true", on-init="DemoCtrl.singleInit()", infinite="false" on-after-change="DemoCtrl.singleAfter(currentSlide)")
              carousel-item
                h3 {{ item + 1 }}
            pre
              code.language-html(prism="")
                | {{ DemoCtrl.single.source }}

          .divider
          .content-box
            h2.title Multiple Item
            button.btn.btn-default(ng-click='DemoCtrl.onToShowChange(1)') To Show: 1
            button.btn.btn-default(ng-click='DemoCtrl.onToShowChange(3)') To Show: 3
            p Showing:&nbsp;
              strong {{ DemoCtrl.multipleToShow }}
            ui-carousel(
              slides="DemoCtrl.multiple.slides",
              slides-to-show="DemoCtrl.multipleToShow",
              slides-to-scroll="3",
              dots="true"
            )
              carousel-item
                h3 {{ item + 1 }}
            pre
              code.language-html(prism="")
                | {{ DemoCtrl.multiple.source }}
          .divider
          .content-box
            h2.title Autoplay
            ui-carousel(
              slides="DemoCtrl.autoplay.slides",
              slides-to-show="3",
              slides-to-scroll="1",
              initial-slide="1",
              autoplay="true",
              autoplay-speed="2000",
              dots="true"
            )
              carousel-item
                h3 {{ item + 1 }}
            pre
              code.language-html(prism="")
                | {{ DemoCtrl.autoplay.source }}
          .divider
          .content-box
            h2.title Fade
            ui-carousel(
              slides="DemoCtrl.fade.slides",
              slides-to-show="3",
              slides-to-scroll="2",
              fade="true",
              dots="true",
            )
              carousel-item
                .image
                  img(src="{{ item }}")
            pre
              code.language-html(prism="")
                | {{ DemoCtrl.fade.source }}
          .divider
          .content-box
            h2.title Add &amp; remove
            ui-carousel(
              slides="DemoCtrl.add.slides",
              slides-to-show="3",
              slides-to-scroll="1",
              dots="true",
            )
              carousel-item
                h3 {{ item + 1 }}
            .buttons
              a.button(ng-click="DemoCtrl.addItem()") Add Slide
              a.button(ng-click="DemoCtrl.removeItem()") Remove Slide
            pre
              code.language-html(prism="")
                | {{ DemoCtrl.add.source }}
          .divider
          .content-box
            h2.title Customzie
            pre
              code.language-html(prism="")
                | {{ DemoCtrl.customize }}

      section.screen.extra
        .divider
        h2.title Follow & Share
        .text-center
          // Place this tag where you want the button to render.
          a.github-button(href='https://github.com/mihnsen', aria-label='Follow @mihnsen on GitHub') Follow @mihnsen
          // Place this tag where you want the button to render.
          a.github-button(href='https://github.com/mihnsen/ui-carousel', data-icon='octicon-star', data-count-href='/mihnsen/ui-carousel/stargazers', data-count-api='/repos/mihnsen/ui-carousel#stargazers_count', data-count-aria-label='# stargazers on GitHub', aria-label='Star mihnsen/ui-carousel on GitHub') Star
        .divider
        h2.title Issues tracker
        .text-center
          // Place this tag where you want the button to render.
          a.github-button(href='https://github.com/mihnsen/ui-carousel/issues', data-icon='octicon-issue-opened', data-style='mega', data-count-api='/repos/mihnsen/ui-carousel#open_issues_count', data-count-aria-label='# issues on GitHub', aria-label='Issue mihnsen/ui-carousel on GitHub') Issue


    footer.footer
      .container
        ul.footer-links
          li
            a(href='http://github.com/mihnsen/ui-carousel', target='_blank') Github
          li
            a(href='http://ownego.com', target='_blank') About
        p
          | Designed and built with love by&nbsp;
          a(href='http://www.github.com/mihnsen', target='_blank') @mihnsen
        p
          | Code licensed&nbsp;
          a(href='https://github.com/twbs/bootstrap/blob/master/LICENSE', target='_blank') MIT
    a(href='https://github.com/mihnsen/ui-carousel')
      img(style='position: fixed; top: 0; right: 0; border: 0;', src='https://camo.githubusercontent.com/52760788cde945287fbb584134c4cbc2bc36f904/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f77686974655f6666666666662e706e67', alt='Fork me on GitHub', data-canonical-src='https://s3.amazonaws.com/github/ribbons/forkme_right_white_ffffff.png')

    script(async='', defer='', src='https://buttons.github.io/buttons.js')

